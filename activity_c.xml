<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnOpenA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open ActivityA" />

    <Button
        android:id="@+id/btnOpenD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open ActivityD" />

    <Button
        android:id="@+id/btnCloseC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close ActivityC" />

    <Button
        android:id="@+id/btnCloseStack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close Stack" />

</LinearLayout>